{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es6",
            "dom"
        ],
        "sourceMap": true,
        "allowJs": false,
        "jsx": "preserve",
        "strict": true,
        "moduleResolution": "node",
        "rootDir": "src",
        "noImplicitReturns": false,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
    },
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "webpack",
        "jest",
    ],
    "types": [
        "typePatches"
    ],
}